generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model ItemAcervo {
  id            String       @id @default(uuid())
  nome          String
  ano           Int
  quantidade    Int
  tipo          String
  dimensoes     String
  informacoes   String
  link          String?
  foto          String
  prateleira    String
  classificacao String
  DoacaoItem    DoacaoItem[]
}

model DoacaoDinheiro {
  id              String @id @default(uuid())
  tipo            String @default("Dinheiro")
  quantiaDinheiro Float
  doador          Doador @relation(fields: [doadorId], references: [id])
  doadorId        String
}

model DoacaoItem {
  id           String     @id @default(uuid())
  tipo         String     @default("Item")
  item         ItemAcervo @relation(fields: [itemAcervoId], references: [id])
  itemAcervoId String
  doador       Doador     @relation(fields: [doadorId], references: [id])
  doadorId     String
}

model Doador {
  id              String           @id @default(uuid())
  nome            String
  cpf             String           @unique
  email           String
  DoacoesDinheiro DoacaoDinheiro[]
  DoacoesItem     DoacaoItem[]
}

model Local {
  id      String    @id @default(uuid())
  rua     String
  bairro  String
  cidade  String
  estado  String
  cep     String    @unique
  Visita  Visita[]
  Oficina Oficina[]
}

model Visitante {
  id       String     @id @default(uuid())
  nome     String
  cpf      String     @unique
  email    String
  visitas  Visita[]
  Oficina  Oficina[]
  Feedback Feedback[]
}

model Organizador {
  id     String   @id @default(uuid())
  nome   String
  cpf    String   @unique
  email  String
  Visita Visita[]
}

model Visita {
  id            String      @id @default(uuid())
  dataHora      DateTime
  local         Local       @relation(fields: [localId], references: [id])
  visitantes    Visitante[]
  organizador   Organizador @relation(fields: [organizadorId], references: [id])
  organizadorId String
  localId       String
}

model Palestrante {
  id      String    @id @default(uuid())
  nome    String
  cpf     String    @unique
  email   String
  Oficina Oficina[]
}

model Oficina {
  id            String      @id @default(uuid())
  titulo        String
  dataHora      DateTime
  local         Local       @relation(fields: [localId], references: [id])
  duracao       String
  resumo        String
  palestrante   Palestrante @relation(fields: [palestranteId], references: [id])
  visitantes    Visitante[]
  localId       String
  palestranteId String
}

model Feedback {
  id          String    @id @default(uuid())
  conteudo    String
  nota        Int
  visitante   Visitante @relation(fields: [visitanteId], references: [id])
  visitanteId String
}
