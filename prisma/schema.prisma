generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model ItemAcervo {
  id          String  @id @default(uuid())
  nome        String
  tipo        String
  ano         Int
  quantidade  Int
  dimensoes   String
  informacoes String
  link        String
  prateleira  String
  Doacao      Doacao?
}

model Doador {
  id      String   @id @default(uuid())
  nome    String
  cpf     String
  email   String
  Doacoes Doacao[]
}

model Doacao {
  id              String     @id @default(uuid())
  tipo            String
  quantiaDinheiro Float
  item            ItemAcervo @relation(fields: [itemAcervoId], references: [id])
  doador          Doador     @relation(fields: [doadorId], references: [id])
  itemAcervoId    String     @unique
  doadorId        String
}
